{% extends "template.twig" %}

{% block body %}

    <div class="ui secondary pointing fluid menu">
        <h2 class="ui header">
            Mensagens
        </h2>
    </div>

    <div class="sixteen wide sales column">
        <div class="ui comments msg-historico">

            <input type="hidden" id="numero" value="{{numero}}">

            <div class="ui active centered inline loader" id="loader"></div>
            
            <div class="inner">
                <ul class="comment"></ul>
            </div>
        </div>
        <form class="ui form">
            <div class="field">
                <textarea rows="2" id="usermsg" tabindex="1"></textarea>
            </div>
            <div class="two fields">
                <div class="field">
                    <select class="ui fluid search dropdown" tabindex="2" name="">
                        {% for canal in canais %}
                            <option value="">{{ canal.nome }} </option>
                        {% endfor %}        
                    </select>
                </div>

                 <div class="field">
                    <button class="ui button" tabindex="3" type="button" id="submitmsg" value="Submit">Enviar</button> 
                </div>  
            </div>
        </form>
    </div>
{% endblock %}

