{% extends "template.twig" %}

{% block body %}
    <div class="ui secondary pointing fluid menu">
        <h2 class="ui header">
            Mensagem
        </h2>

        <!--<div class="right menu">
            <a class="ui active item">
            Lista
            </a>
            <a class="ui disabled item">
            Transactions
            </a>
        </div>-->
    </div>
    <div class="sixteen wide sales column">
        <table class="ui mini table">
            <thead>
            <tr>
                <th>#</th>
                <th>Nome</th>
                <th>Telefone</th>
                <th>Data/Hra</th>
            </tr>
            </thead>
            <tbody>
                {% for msg in mensagens %}
                    <tr>
                        <td>
                            <a href="{{ path_for('detalhe_mensagens',{ 'numero': msg.numero}) }}">
                                {{ msg.numero }}</a>
                            </td>                  
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="4">
                        <div class="ui right floated pagination menu">
                            <a class="icon item">
                            <i class="left chevron icon"></i>
                            </a>
                            <a class="item">1</a>
                            <a class="item">2</a>
                            <a class="item">3</a>
                            <a class="item">4</a>
                            <a class="icon item">
                            <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </th>
                </tr>
            </tfoot>
        </table>
    </div>

{% endblock %}