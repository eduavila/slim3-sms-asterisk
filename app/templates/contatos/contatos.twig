{% extends "template.twig" %}

{% block body %}

    <div class="ui secondary pointing fluid menu">
        <h2 class="ui header">
            Contatos
        </h2>
    </div>
    <div class="sixteen wide sales column">
        {% include 'notificacao.twig' only %}
        
        <table class="ui mini table">
            <thead>
            <tr>
                <th>#</th>
                <th>Nome</th>
                <th>Telefone</th>
                <th>E-mail</th>
            </tr>
            </thead>
            <tbody>
                {% for contato in contatos %}
                    <tr>
                        <td><a href="{{ path_for('contatos_edit',{'contato': contato.id }) }}">{{ contato.id }}</a></td>                  
                        <td>{{ contato.nome }}</td>
                        <td>{{ contato.numero }}</td>
                        <td>{{ contato.email }}</td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="4">
                        <div class="ui right floated pagination menu">
                            <a class="icon item">
                            <i class="left chevron icon"></i>
                            </a>
                            <a class="item">1</a>
                            <a class="item">2</a>
                            <a class="item">3</a>
                            <a class="item">4</a>
                            <a class="icon item">
                            <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </th>
                </tr>
            </tfoot>
        </table>
    </div>

{% endblock %}