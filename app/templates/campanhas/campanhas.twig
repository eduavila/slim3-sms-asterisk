{% extends "template.twig" %}

{% block body %}
    <div class="ui secondary pointing fluid menu">
        <h2 class="ui header">
            Campanhas
        </h2>
    </div>
    <div class="sixteen wide sales column">
        
        {% include 'notificacao.twig' only %}

        <table id="campanhas" class="ui celled table datatable" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th width="25px">#</th>
                    <th>Nome</th>
                    <th width="15px">Quantidade contato</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for campanha in campanhas %}
                    <tr>
                        <td>{{ campanha.id_campanha_id }}</td>                  
                        <td>{{ campanha.nome_campanha }}</td>
                        <td >{{campanha.qtd_contato}}</td>
                        <td class="btn-acoes">
                            <a class="ui teal buttons" href="{{ path_for('campanhas_detalhe',{'campanha': campanha.id_campanha_id }) }}">
                                <div class="ui button">Visualizar</div> 
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}