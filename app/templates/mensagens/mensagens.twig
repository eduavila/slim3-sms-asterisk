{% extends "template.twig" %}

{% block body %}
    <div class="ui secondary pointing fluid menu">
        <h2 class="ui header">
            Mensagem
        </h2>
    </div>
    <div class="sixteen wide sales  fluid column">
         <table id="mensagens" class="ui celled table datatable" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Telefone</th>
                    <th>Nome</th>
                    <th>Data/Hra</th>
                </tr>
            </thead>
            <tbody>
                {% for msg in mensagens %}
                    <tr>
                        <td>
                            <a href="{{ path_for('detalhe_mensagens',{ 'numero': msg.numero}) }}">
                                {{ msg.numero }}
                            </a>
                        </td>                  
                        <td></td>
                        <td>{{msg.data|date("d/m/Y")}} {{msg.hora}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}