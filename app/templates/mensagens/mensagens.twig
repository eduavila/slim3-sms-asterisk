{% extends "template.twig" %}

{% block body %}
    <div class="ui secondary pointing fluid menu">
        <h2 class="ui header">
            Mensagem
        </h2>

        <!--<div class="right menu">
            <a class="ui active item">
            Lista
            </a>
            <a class="ui disabled item">
            Transactions
            </a>
        </div>-->
    </div>
    <div class="sixteen wide sales column">
     <div class="ui icon input">
          <input type="text" placeholder="Pesquisar...">
          <i class="circular search link icon"></i>
        </div>
        <table class="ui small very compact celled black table">
            <thead>
                <tr>
                    <th>Telefone</th>
                    <th>Nome</th>
                    <th>Data/Hra</th>
                </tr>
            </thead>
            <tbody>
                {% for msg in mensagens %}
                    <tr>
                        <td>
                            <a href="{{ path_for('detalhe_mensagens',{ 'numero': msg.numero}) }}">
                                {{ msg.numero }}
                            </a>
                        </td>                  
                        <td></td>
                        <td>{{msg.data}} {{msg.hora}}</td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="3">
                       {% include 'paginate.twig' %}
                    </th>
                </tr>
            </tfoot>
        </table>
    </div>

{% endblock %}